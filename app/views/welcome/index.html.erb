<div class="container">
  <% if current_user == nil %>
  <div class="well">
    <h1 class="text-center">Welcome to Twittier</h1>
  </div>
  <div class="well">
    <h3 class="text-center">
      Please <%= link_to 'login', login_path %> with Twitter to continue.
    </h3>
  </div>
  <% else %>
    <div class="well" id="user-well">
      <%= render 'user_info' %>
    </div>
    <h2>Post a new Twit</h2>
    <div class="well" id="new-tweet"><%= render 'new_tweet_form' %></div>
    <h2>Twit Feed</h2><%= render 'tweet_list' %><% end %>
  </div>
</div>