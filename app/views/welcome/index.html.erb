<div class="container">
  <% if @user == nil %>
  <div class="well">
    <h1 class="text-center">Welcome to Twittier</h1>
  </div>
  <div class="well">
    <h3 class="text-center">
      Please <%= link_to 'login', login_path %> with Twitter to continue.
    </h3>
  </div>
  <% else %>
    <div class="well" id="user-well">
      <%= render 'user_info' %>
    </div>
    <div class="well" id="new-tweet">
      New Tweet Form
    </div>
    <h2>Tweets</h2>
    <% @tweets.each do |tweet| %>
      <div class="well">
        <%= tweet.full_text %>
      </div>
    <% end %>
  <% end %>
  </div>
</div>